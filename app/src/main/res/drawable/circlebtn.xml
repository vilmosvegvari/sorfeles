    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/btn"/>

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>
        </shape>
    </item>
</selector>